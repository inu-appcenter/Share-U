<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/include_select_major_bar"
        layout="@layout/layout_select_major_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center" />

    <include
        android:id="@+id/include_select_tap"
        layout="@layout/layout_select_tap"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="17dp"
        />

    <TextView
        android:id="@+id/tv_my_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="국어국문학과"
        android:textColor="@color/Iris"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/include_recyclerview_select_major"
        layout="@layout/layout_recyclerview_select_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp" />

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>-->
</LinearLayout>