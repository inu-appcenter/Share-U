<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_my_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/drawer_login"
        android:visibility="gone"
        >


        <ImageButton
            android:id="@+id/btn_drawer_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:srcCompat="@drawable/group265" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="122dp">

            <LinearLayout
                android:id="@+id/my_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <include
                    android:id="@+id/include_my_point"
                    layout="@layout/layout_my_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/welcome_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/give_me_welcome_point"
                    android:layout_width="158dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="환영합니다!"
                        android:textColor="@color/Iris"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="웰컴 포인트를 받으세요." />

                    <FrameLayout
                        android:id="@+id/getpoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rectangle607">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="10 Point"
                            android:textColor="@color/Iris"
                            android:textSize="18sp" />
                    </FrameLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_detail_point"
            android:layout_width="wrap_content"

            android:layout_height="36dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text=">  상세내역보기"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginRight="19.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:orientation="horizontal"
            android:layout_marginTop="17.5dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_my_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디자인학부"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_my_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201502123"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_weight="1"
                android:text="홍길동"
                android:textColor="@color/Iris"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="님"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginRight="19.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_change_my_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text="내 정보 수정"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_update_my_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="내가 올린 자료"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_get_my_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="내가 받은 자료"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_notice_my_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_notice_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="로그아웃"
                android:textColor="@color/Iris"
                android:textSize="18sp" />
        </LinearLayout>




    </LinearLayout>


    //////////////////////////////////////////////////////////////////

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/drawer_logout"
>
        <ImageButton
            android:id="@+id/btn_drawer_back2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:srcCompat="@drawable/group265" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="108dp">

            <include
                android:id="@+id/include_question_point"
                layout="@layout/layout_question_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"

            android:text="로그인을 해주세요."
            android:textColor="@color/black"
            android:textSize="18sp" />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="28.5dp"
            android:layout_marginRight="15.5dp"
            android:background="@color/gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_notice_my_page2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/circle23" />

            <TextView
                android:id="@+id/tv_my_notice_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="로그인"
                android:textColor="@color/Iris"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>