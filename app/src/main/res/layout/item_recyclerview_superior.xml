<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/draw_oval"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_default_superior"
            android:layout_width="48dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_superior_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="문테기 족보"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/item_default_superior"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"

        ></TextView>

    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/superior_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srb_numStars="5"
        app:srb_starWidth="17.4dp"
        app:srb_starHeight="17.4dp"
        app:srb_starPadding="1dp"
        app:srb_drawableFilled="@drawable/fill"
        app:srb_drawableEmpty="@drawable/empty_star"
        app:srb_stepSize="0.1"
        android:layout_marginTop="6.6dp"
        ></com.willy.ratingbar.BaseRatingBar>
    <!--<com.willy.ratingbar.ScaleRatingBar

        android:id="@+id/ratingBar"
        android:layout_width="96.5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6.6dp"

        />-->


</LinearLayout>