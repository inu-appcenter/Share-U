<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@drawable/draw_oval"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_default_superior"
            android:layout_width="48dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_superior_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="문테기 족보"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/item_default_superior"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"

        ></TextView>

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6.6dp"
        android:progressTint="@color/Iris" />


</LinearLayout>