<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left_bar_main"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/group62" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            app:srcCompat="@drawable/group69" />

        <Button
            android:id="@+id/btn_my_page_main"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"

            android:background="@drawable/group80" />
    </LinearLayout>

    <EditText
        android:id="@+id/etv_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="34dp"
        android:layout_weight="0"
        android:textColor="@color/cardview_dark_background"

        android:drawableRight="@drawable/group181"
        android:ems="10"
        android:hint="검색"
        android:inputType="textPersonName"
        android:textColorHint="#57000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:text="우수자료"


            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="별점순"
            android:textColor="#57000000"
/>

        <com.kingfisher.easyviewindicator.RecyclerViewIndicator
            android:id="@+id/recyclerViewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="186dp"
            android:layout_marginRight="15dp"




            app:avi_animation_enable="true"
            app:avi_drawable="@drawable/blue_radius"
            app:avi_drawable_unselected="@drawable/gray_radius">

        </com.kingfisher.easyviewindicator.RecyclerViewIndicator>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_main"
        android:scrollbars="none"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>